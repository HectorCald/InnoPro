<!-- ==================== HEADER ==================== -->
<%- include('partials/header') %>
    <div class="login-container">
        <!-- ==================== HEADER ==================== -->
        <div class="login-header">
            <h1 class="animated-title">
                <span class="text-animation">
                    <span class="letter-group">
                        <span class="static">I</span>
                        <span class="expand">nno</span>
                    </span>
                    <span class="letter-group">
                        <span class="static">P</span>
                        <span class="expand">ro</span>
                    </span>
                </span>
            </h1>
            <p class="slogan">Empresa damabrava<span class="underline-animation"></span></p>
        </div>
        <!-- ==================== CAMPO DE PIN ==================== -->
        <p class="bienvenido-user">Bienvenido</p>
        <p>Ingresa tu PIN para continuar</p>
        <div class="pin-section">
            <div class="pin-dots">
                <span class="pin-dot"></span>
                <span class="pin-dot"></span>
                <span class="pin-dot"></span>
                <span class="pin-dot"></span>
            </div>
            <div class="error-message"></div>
            <p class="sin-pin">No tengo un PIN</p>
        </div>
        <!-- ==================== NO TIENES PIN ==================== -->
        <div class="modal" id="pinModal">
            <div class="modal-content">
                <h2>¿No tienes PIN?</h2>
                <p>Por favor, contacta con el administrador del sistema para obtener tu PIN de acceso.</p>
                <button class="modal-close"><i class="fas fa-times"></i></button>
            </div>
        </div>

        <!-- ==================== KEYBOARD DEL PIN ==================== -->
        <div class="keyboard-section">
            <div class="numeric-keyboard">
                <button class="num-key ripple" id="permiso">1</button>
                <button class="num-key ripple">2</button>
                <button class="num-key ripple">3</button>
                <button class="num-key ripple">4</button>
                <button class="num-key ripple">5</button>
                <button class="num-key ripple">6</button>
                <button class="num-key ripple">7</button>
                <button class="num-key ripple">8</button>
                <button class="num-key ripple">9</button>
                <button class="num-key clear ripple">C</button>
                <button class="num-key ripple">0</button>
                <button class="num-key delete ripple">
                    <i class="fas fa-backspace"></i>
                </button>
            </div>
        </div>
        <div class="config-section">
            <button class="btn-desinstalar ripple">
                <i class="fas fa-trash"></i>
            </button>
        </div>
        <p style="margin: 0;">&copy; 2025 damabrava. Todos los derechos reservados.</p>
        <p class="version" style="margin-top: 5px;"></p>
    </div>

    <!-- ==================== CARGA LOANDER ==================== -->
    <div class="carga">
        <div class="loader">
            <div class="square"></div>
            <div class="square"></div>
            <div class="square"></div>
            <div class="square"></div>
        </div>
    </div>
    <!-- ==================== MODAL LIMPIEZA ==================== -->
    <div class="modal" id="cleanupModal">
        <div class="modal-content">
            <h2>¿Borrar datos locales?</h2>
            <p>Esta acción eliminará todos los datos almacenados:</p>
            <ul class="cleanup-list">
                <li><i class="fas fa-database"></i> Caché y cookies</li>
                <li><i class="fas fa-key"></i> Configuraciones</li>
                <li><i class="fas fa-history"></i> Historial local</li>
            </ul>
            <div class="anuncio-botones">
                <button class="anuncio-btn red confirmar">Sí, Eliminar</button>
            </div>
            <button class="modal-close"><i class="fas fa-times"></i></button>
        </div>
    </div>

    <%- include('partials/footer') %>