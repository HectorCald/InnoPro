<%- include('partials/header') %>
    <div class="login-container">
        <div class="login-header">
            <h1 class="animated-title">
                <span class="text-animation">
                    <span class="letter-group">
                        <span class="static">I</span>
                        <span class="expand">nno</span>
                    </span>
                    <span class="letter-group">
                        <span class="static">P</span>
                        <span class="expand">ro</span>
                    </span>
                </span>
            </h1>
            <p class="slogan">Empresa damabrava<span class="underline-animation"></span></p>
        </div>
        <p>Ingresa tu PIN para continuar</p>
        <div class="pin-section">
            <div class="pin-dots">
                <span class="pin-dot"></span>
                <span class="pin-dot"></span>
                <span class="pin-dot"></span>
                <span class="pin-dot"></span>
            </div>
            <div class="error-message"></div>
